#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["nuget.config", "."]
COPY ["source/Api/Company.Product.WebApi.Api.csproj", "source/Api/"]
RUN dotnet restore "source/Api/Company.Product.WebApi.Api.csproj"
COPY . .
WORKDIR "/src/source/Api"
RUN dotnet build "Company.Product.WebApi.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Company.Product.WebApi.Api.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "Company.Product.WebApi.Api.dll"]